$('.close_auction_btn').unbind('ajax:success');

$('.close_auction_btn').bind('ajax:success', function(){
    $("span.success").empty();
    var parent = $(this).closest('tr.auction');
    var pId = parent.attr('id');
    parent.fadeOut('slow', function() {
        parent.replaceWith(
                "<%= escape_javascript(render :partial => "close_auction", :locals => {:auction => @silent_auction}) %> "
        );
        $("#" + pId).addClass('just_closed').fadeIn();
    });
});